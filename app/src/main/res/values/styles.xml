<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/pink</item>

        <item name="colorPrimary">@color/blue</item>//控件拉伸默认色
        <item name="colorAccent">@color/pink</item>//控件的默认色
    </style>
    <style name="AppTheme" parent="@style/BaseAppTheme">
    </style>
    <!--<style name="Animtop">-->
    <!--<item name="windowEnterAnimation">@anim/animtop_enter</item>-->
    <!--<item name="windowExitAnimation">@anim/toast_exit</item>-->
    <!--</style>-->
    <style name="toast_anim">
        <item name="android:windowEnterAnimation">@anim/animtop_enter</item>
        <item name="android:windowExitAnimation">@anim/animtop_exit</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@color/dialogbg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
